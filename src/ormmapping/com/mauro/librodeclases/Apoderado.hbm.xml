<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.mauro.librodeclases.Apoderado" table="Apoderado" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="nombre" column="Nombre" type="string" length="255" not-null="false" lazy="false"/>
		<property name="rut" column="Rut" type="string" length="255" not-null="false" lazy="false"/>
		<set name="ORM_Alumnos" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="ApoderadoID" not-null="true"/>
			<one-to-many class="com.mauro.librodeclases.Alumno"/>
		</set>
	</class>
</hibernate-mapping>
