<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.mauro.librodeclases.Actividad" table="Actividad" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="nombre" column="Nombre" type="string" length="255" not-null="false" lazy="false"/>
		<property name="tipo" column="Tipo" type="string" length="255" not-null="false" lazy="false"/>
		<property name="descripcion" column="Descripcion" type="string" length="255" not-null="false" lazy="false"/>
		<property name="fecha" column="Fecha" type="calendar" not-null="false" lazy="false"/>
		<property name="evaluado" column="Evaluado" type="boolean" not-null="true" lazy="false"/>
	</class>
</hibernate-mapping>
